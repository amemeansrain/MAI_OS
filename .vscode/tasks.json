{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cmake-build",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "${workspaceFolder}/build", "--config", "Debug"],
      "group": "build",
      "problemMatcher": ["$msCompile"],
      "detail": "CMake build task"
    },
    {
      "label": "cmake-configure",
      "type": "shell",
      "command": "cmake",
      "args": ["-B", "${workspaceFolder}/build", "-S", "${workspaceFolder}"],
      "group": "build",
      "problemMatcher": [],
      "detail": "CMake configure task"
    }
  ]
}
